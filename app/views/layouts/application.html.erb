<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>

    <%= render 'layouts/navbar' %>

        <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path "x7zetejb3dtx3rck1wmm", height: 1064, width: 768, crop: :fill %>');">
        <div class="banner-content">
          <h1>Cocktail Paradise</h1>
          <p>Find new ideas for your parties !</p>
        </div>

      </div>







    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>

</html>


